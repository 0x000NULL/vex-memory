# Vex Memory Configuration
# Copy to .env and customize

# PostgreSQL
POSTGRES_USER=vex
POSTGRES_PASSWORD=changeme
POSTGRES_DB=vex_memory

# Database connection (used by API container)
DATABASE_URL=postgresql://vex:changeme@db:5432/vex_memory

# Ollama (embedding model)
# If running Ollama on the host, use host.docker.internal from inside Docker
OLLAMA_URL=http://host.docker.internal:11434
EMBED_MODEL=all-minilm

# Auto-extraction
AUTO_EXTRACT_ENABLED=false
AUTO_EXTRACT_THRESHOLD=0.5

# Environment
VEX_ENV=docker
